pipeline {
    agent any

    stages {
        stage('Build Docker Image') {
            steps {
                script {
                    dockerImage = docker.build("my-image:latest", " .")
                }
            }
        }

        stage('Run Docker Container') {
            steps {
                script {
                    docker.run("-p 8080:80 my-image:latest")
                }
            }
        }
    }
}
